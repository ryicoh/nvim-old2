{
    "python.formatting.provider": "black",
    "coc.preferences.formatOnSaveFiletypes": ["python", "dart"],
    "languageserver": {
      "golang": {
        "command": "gopls",
        "rootPatterns": ["go.mod"],
        "filetypes": ["go"]
      }
    },
    "yaml.schemas": {
      "kubernetes": "/*.yaml"
    },
    "list.normalMappings": {
        "<C-c>": "do:exit"
    },
    "list.insertMappings": {
        "<C-c>": "do:exit"
    },
    "eslint": {
        "autoFixOnSave": true,
        "filetypes": ["javascript", "vue", "typescript", "typescriptreact", "typescript.tsx"]
    },
    "tsserver": {
        "enable": true
    },
    "typescript": {
        "format": {
            "enabled": true
        }
    },
    "flutter": {
      "trace.server": "on",
      "flutter.lsp.debug": true
    }
}
